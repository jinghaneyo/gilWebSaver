{
  "manifest_version": 3,
  "name": "gilWebSaver",
  "version": "1.0",
  "description": "웹 콘텐츠를 HTML 또는 PDF로 저장하는 확장 프로그램",
  "permissions": [
    "activeTab",
    "storage", 
    "downloads",
    "tabs",
    "scripting",
    "windows",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "gilWebSaver"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}